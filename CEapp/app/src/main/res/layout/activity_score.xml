<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joakim.ceapp.ScoreActivity"
    android:background="#C7DFBA">

    <TextView
        android:text="Din score:"
        android:textColor="#6393C3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="71dp"
        android:id="@+id/scorenameTxt" />

    <TextView
        android:text="ph"
        android:textColor="#6393C3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scorenameTxt"
        android:layout_alignStart="@+id/scorenameTxt"
        android:layout_marginTop="22dp"
        android:id="@+id/scoreTxt" />

    <ImageView
        app:srcCompat="@drawable/phfingerdrag"
        android:layout_marginTop="24dp"
        android:id="@+id/img"
        android:layout_below="@+id/scoreTxt"
        android:layout_centerHorizontal="true"
        android:layout_height="25dp"
        android:layout_width="25dp" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/resetBtn" />

</RelativeLayout>
