 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.joakim.ceapp.ShowLeaderboardActivity$PlaceholderFragment">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="35dp"
         android:layout_marginBottom="40dp"
         android:background="#155965">
         <Button
             android:id="@+id/answersBtn"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@color/buttonActive"
             android:textColor="#6393C3"
             android:text="Answers"
             android:padding="0dp"
             />
         <Button
             android:id="@+id/scoreBtn"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:background="@color/button"
             android:textColor="#6393C3"
             android:text="Score"
             android:padding="0dp"
             />
     </LinearLayout>
     <ScrollView
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:fillViewport="true"
         android:layout_marginTop="35dp"
         >
        <ListView
            android:id="@+id/leaderboardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="20dp">
        </ListView>
     </ScrollView>
 </RelativeLayout>
