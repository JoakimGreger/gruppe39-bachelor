<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joakim.ceapp.MainActivity"
    android:padding="0dp"
    android:background="@drawable/backgroundimage">

    <TextView
        android:text="Customer Experience Management-app"
        android:gravity="center"
        android:background="#155965"
        android:textColor="#6393C3"
        android:id="@+id/nameTxt"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="En app laget av gruppe 39"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/infoTxt"
        android:layout_below="@+id/nameTxt"
        android:layout_alignParentStart="true"
        android:background="#155965"
        android:textColor="#6393C3"
        android:gravity="center"
        android:textSize="10dp"/>

    <ImageView
        app:srcCompat="@drawable/celogo"
        android:id="@+id/imageView"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Start"
        android:background="#155965"
        android:textColor="#6393C3"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/buttonButton"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Score"
        android:textColor="#6393C3"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/scoreBtn"
        android:background="#155965"
        android:layout_below="@+id/buttonButton"
        android:layout_alignStart="@+id/buttonButton"
        android:layout_marginTop="12dp" />
    <Button
        android:text="Login"
        android:textColor="#6393C3"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/loginBtn"
        android:background="#155965"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/buttonButton"
        />
t
    <Button
        android:text="Logout"
        android:textColor="#6393C3"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/logoutBtn"
        android:background="#155965"
        android:layout_below="@+id/scoreBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:onClick="logoutBtnClicked"
        android:layout_alignStart="@+id/buttonButton"
        />

</RelativeLayout>
