<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joakim.ceapp.ScoreActivity"
    android:background="@drawable/backgroundimage">

    <Button
        android:text="Reset"
        android:layout_height="30dp"
        android:textColor="#6393C3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/resetBtn"
        android:background="#155965"
        android:layout_width="120dp" />

    <ImageView
        app:srcCompat="@drawable/score_bilde2"
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:text="ph"
        android:textColor="#6393C3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textAlignment="center"
        android:id="@+id/scoreTxt"
        android:layout_below="@+id/resetBtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/answerTxt"
        android:textColor="#6393C3"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/scoreTxt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
